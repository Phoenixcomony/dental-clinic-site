<script>
  // ===== Helpers =====
  const isSaudi05 = (v)=> /^05\d{8}$/.test((v||'').replace(/\D/g,''));
  // ÿ™ŸÅÿπŸäŸÑ ÿ≤ÿ± ÿ™ÿ≥ÿ¨ŸäŸÑ ÿßŸÑÿØÿÆŸàŸÑ (ŸäÿØÿπŸÖ ÿ£ÿ±ŸÇÿßŸÖ ÿπÿ±ÿ®Ÿäÿ© Ÿàÿ•ŸÜÿ¨ŸÑŸäÿ≤Ÿäÿ©)
function updateLoginBtn(){
  const phoneOK = isSaudi05(mobile.value);

  // ÿ™ÿ≠ŸàŸäŸÑ ÿßŸÑÿ£ÿ±ŸÇÿßŸÖ ÿßŸÑÿπÿ±ÿ®Ÿäÿ© ÿ•ŸÑŸâ ÿ•ŸÜÿ¨ŸÑŸäÿ≤Ÿäÿ©
  const toEn = s => s.replace(/[Ÿ†-Ÿ©]/g, d => 'Ÿ†Ÿ°Ÿ¢Ÿ£Ÿ§Ÿ•Ÿ¶ŸßŸ®Ÿ©'.indexOf(d));

  const idRaw = toEn(identity.value || '');
  const idDigits = idRaw.replace(/\D/g,'');
  const okId = idDigits.length >= 9;

  loginBtn.disabled = !(okId && phoneOK);
}

// ===== ÿπŸÜÿßÿµÿ± ÿ£ÿ≥ÿßÿ≥Ÿäÿ© =====
const screenLoader = document.getElementById('screenLoader');

const identity  = document.getElementById('identity');
const mobile    = document.getElementById('mobile');
const loginBtn  = document.getElementById('loginBtn');
const loginMsg  = document.getElementById('loginMsg');
['input','change','keyup'].forEach(ev=>{
  identity.addEventListener(ev, updateLoginBtn);
  mobile.addEventListener(ev, updateLoginBtn);
});

 

  // ÿ¥ÿßÿ¥ÿ© ÿßŸÑÿßŸÜÿ™ÿ∏ÿßÿ±
  const showLoader = (on)=> {
    if(on){ screenLoader.classList.add('show'); document.body.style.pointerEvents='none'; }
    else { screenLoader.classList.remove('show'); document.body.style.pointerEvents='auto'; }
  };

 

  // ŸÅÿ™ÿ≠ ŸÖŸÑŸÅ ÿ¨ÿØŸäÿØ
  document.getElementById('openNewFileBtn').addEventListener('click', ()=>{
    if ((identity.value||'').trim()) localStorage.setItem('auth_identity', (identity.value||'').trim());
    if (isSaudi05(mobile.value))     localStorage.setItem('auth_phone', mobile.value.trim());
    window.location.href = 'new-file.html';
  });

  // ÿ™ÿ≥ÿ¨ŸäŸÑ ÿßŸÑÿØÿÆŸàŸÑ
  loginBtn.addEventListener('click', async ()=>{
    loginBtn.disabled = true;

    loginMsg.textContent = 'ÿ¨ÿßÿ±Ÿê ÿßŸÑÿ™ÿ≠ŸÇŸÇ...';
    const payload = {
      identity: (identity.value||'').trim(),
      phone: (mobile.value||'').trim(),
    };
    showLoader(true);
    try{
      const r = await fetch('/api/login', {
        method:'POST', headers:{'Content-Type':'application/json'},
        body: JSON.stringify(payload)
      });
      const data = await r.json();

      if(!data.success){
        loginMsg.textContent = data.message || 'ŸÑÿß ÿ™ŸÖŸÑŸÉ ŸÖŸÑŸÅŸãÿß ŸÑÿØŸäŸÜÿß. ÿßŸÜŸÇÿ± (ÿßŸÅÿ™ÿ≠ ŸÖŸÑŸÅ ÿ¨ÿØŸäÿØ).';
        loginBtn.disabled = false;

        return;
      }

      // ŸäŸàÿ¨ÿØ ŸÖŸÑŸÅ
    

      if (data.hasIdentity === false) {
        loginMsg.textContent = 'ŸÜÿ≠ÿ™ÿßÿ¨ ÿßÿ≥ÿ™ŸÉŸÖÿßŸÑ ÿßŸÑŸáŸàŸäÿ© ŸÇÿ®ŸÑ ÿßŸÑÿ≠ÿ¨ÿ≤...';
        setTimeout(()=>{ window.location.href = 'identity.html'; }, 500);
        return;
      }

      // ŸÑÿØŸäŸá ŸáŸàŸäÿ© ‚Äî ÿ£ÿ∏Ÿáÿ± ÿßŸÑÿ≠ÿ¨ÿ≤
      loginMsg.textContent = '';
      document.getElementById('loginSection').style.display = 'none';
      document.getElementById('bookingSection').style.display = '';
      window.scrollTo({top:0, behavior:'smooth'});
    }catch(e){
      loginMsg.textContent = 'ÿ™ÿπÿ∞Ÿëÿ± ÿßŸÑÿ™ÿ≠ŸÇŸÇ ÿ≠ÿßŸÑŸäŸãÿß. ÿ≠ÿßŸàŸÑ ŸÑÿßÿ≠ŸÇŸãÿß.';
      loginBtn.disabled = false;

    }finally{
      showLoader(false);
    }
  });

  // ===== ÿπŸÜÿßÿµÿ± ÿßŸÑÿ≠ÿ¨ÿ≤ =====
  let isLoadingTimes = false;
  const fetchBtn = document.getElementById('fetchBtn');
  const timeSel  = document.getElementById('time');
  const bookNowBtn = document.getElementById('bookNowBtn');
  const bkMsg = document.getElementById('bkMsg');
  const clinicSel = document.getElementById('clinic');
  // ================= LOAD CLINICS FROM SERVER =================
async function loadClinics() {
  try {
    const res = await fetch('/api/clinics');
    const data = await res.json();

    if (!data.success) return;

    // ÿ™ŸÅÿ±Ÿäÿ∫ ÿßŸÑŸÇÿßÿ¶ŸÖÿ©
    clinicSel.innerHTML = '<option value="">ÿßÿÆÿ™ÿ± ÿßŸÑÿπŸäÿßÿØÿ©</option>';

    data.clinics.forEach(c => {
      const opt = document.createElement('option');
      opt.value = c.value; // ŸÜŸÅÿ≥ ÿßŸÑŸÇŸäŸÖÿ© ÿßŸÑŸÖÿ≥ÿ™ÿÆÿØŸÖÿ© ŸÅŸä ÿßŸÑÿ≠ÿ¨ÿ≤
      opt.textContent = `${c.label} (${c.from} ‚Äì ${c.to})`;
      clinicSel.appendChild(opt);
    });

  } catch (e) {
    console.error('Failed to load clinics', e);
  }
}

  const monthSel  = document.getElementById('month');
  
  
  // ÿ•ÿÆŸÅÿßÿ° ÿßŸÑÿ¥Ÿáÿ± Ÿàÿ≤ÿ± ÿπÿ±ÿ∂ ÿßŸÑŸÖŸàÿßÿπŸäÿØ (ŸÑŸÖ ŸäÿπÿØÿß ŸÖÿ≥ÿ™ÿÆÿØŸÖŸäŸÜ)
monthSel.closest('.field').style.display = 'none';
fetchBtn.style.display = 'none';

// ŸÇŸäŸÖÿ© ÿ¥ŸÉŸÑŸäÿ© ŸÅŸÇÿ∑ ŸÑŸÑÿ™ŸàÿßŸÅŸÇ
monthSel.value = 'auto';

  document.getElementById('month').closest('.field').style.display = 'none';
  const dermNote  = document.getElementById('dermNote');
  const noteWrap  = document.getElementById('noteWrap');
  const noteInput = document.getElementById('note');

  // >>> ÿØÿßŸÑÿ© ÿµÿ∫Ÿäÿ±ÿ© ŸÑÿ™ÿÆÿ≤ŸäŸÜ ŸÑŸÇÿ∑ÿ© ÿ®ŸäÿßŸÜÿßÿ™ ÿßŸÑÿ≠ÿ¨ÿ≤ ŸÑÿµŸÅÿ≠ÿ© success.html
  function snapshotPendingForSuccess(){
    localStorage.setItem('pending_identity', localStorage.getItem('auth_identity') || '');
    localStorage.setItem('pending_phone',    localStorage.getItem('auth_phone')    || '');
    localStorage.setItem('pending_clinic', clinicSel.value);
    localStorage.setItem('pending_clinic_label', clinicSel.selectedOptions[0]?.text || clinicSel.value || '');
    localStorage.setItem('pending_month', monthSel.value);
    localStorage.setItem('pending_time', timeSel.value);
    localStorage.setItem('pending_note', (noteInput.value || '').trim());
  }

  // ÿØÿßŸÑÿ© ŸÑÿ™ŸÅÿ±Ÿäÿ∫ ÿßŸÑŸÜÿ™ÿßÿ¶ÿ¨ Ÿàÿ•ÿ¨ÿ®ÿßÿ± ÿ•ÿπÿßÿØÿ© ÿßŸÑÿπÿ±ÿ∂
  function resetTimes(trigger=''){
   timeSel.innerHTML = `<option value="">ÿßÿÆÿ™ÿ± ÿπŸäÿßÿØÿ© ŸÑÿπÿ±ÿ∂ ÿßŸÑÿ£ŸàŸÇÿßÿ™</option>`;
timeSel.disabled = false;   // üî• ŸÑÿß ÿ™ÿπÿ∑ŸÑŸáÿß
bookNowBtn.disabled = true;

    bkMsg.textContent = trigger === 'clinic'
      ? 'ÿ™ŸÖ ÿ™ÿ∫ŸäŸäÿ± ÿßŸÑÿπŸäÿßÿØÿ© ‚Äî ÿßÿπÿ±ÿ∂ ÿßŸÑŸÖŸàÿßÿπŸäÿØ ŸÖŸÜ ÿ¨ÿØŸäÿØ.'
      : (trigger === 'month' ? 'ÿ™ŸÖ ÿ™ÿ∫ŸäŸäÿ± ÿßŸÑÿ¥Ÿáÿ± ‚Äî ÿßÿπÿ±ÿ∂ ÿßŸÑŸÖŸàÿßÿπŸäÿØ ŸÖŸÜ ÿ¨ÿØŸäÿØ.' : '');
  }

  // ÿ•ÿ∏Ÿáÿßÿ± ÿßŸÑŸÖŸÑÿßÿ≠ÿ∏ÿ© ÿßŸÑÿÆÿßÿµÿ© ŸÑÿπŸäÿßÿØÿ© ÿ™ŸÜÿ∏ŸäŸÅ ÿßŸÑÿ®ÿ¥ÿ±ÿ© ŸÅŸÇÿ∑ + ÿ•ÿ∏Ÿáÿßÿ± ÿÆÿßŸÜÿ© "ŸÜŸàÿπ ÿßŸÑÿÆÿØŸÖÿ©/ŸÖŸÑÿßÿ≠ÿ∏ÿ©" ÿπŸÜÿØ ÿßÿÆÿ™Ÿäÿßÿ± ÿ£Ÿä ÿπŸäÿßÿØÿ©
clinicSel.addEventListener('change', ()=>{
  const v = clinicSel.value || '';
  const isCleaning = v.startsWith('ÿπŸäÿßÿØÿ© ÿ™ŸÜÿ∏ŸäŸÅ ÿßŸÑÿ®ÿ¥ÿ±ÿ©');
  dermNote.style.display = isCleaning ? 'block' : 'none';
  noteWrap.style.display = v ? 'block' : 'none';

  if (!v) {
    resetTimes('clinic');
    return;
  }

  // ÿ¨ŸÑÿ® ÿßŸÑŸÖŸàÿßÿπŸäÿØ ŸÖÿ®ÿßÿ¥ÿ±ÿ©
  fetchBtn.click();
});



  // üî• ÿßÿ¨ŸÑÿ® ÿßŸÑŸÖŸàÿßÿπŸäÿØ ÿ™ŸÑŸÇÿßÿ¶ŸäŸãÿß
loadClinics();



  // ÿ™ŸÅÿ±Ÿäÿ∫ ÿßŸÑÿ£ŸàŸÇÿßÿ™ ÿπŸÜÿØ ÿ™ÿ∫ŸäŸäÿ± ÿßŸÑÿ¥Ÿáÿ±
  monthSel.addEventListener('change', ()=> resetTimes('month'));

  fetchBtn.addEventListener('click', async () => {
    const clinic = clinicSel.value;
    const month  = monthSel.value;

    bkMsg.textContent = '';
    timeSel.disabled = false;

    bookNowBtn.disabled = true;
    timeSel.innerHTML = `<option>...ÿ¨ÿßÿ±Ÿä ÿ¨ŸÑÿ® ÿßŸÑÿ£ŸàŸÇÿßÿ™...</option>`;

    if (!clinic) {
  timeSel.innerHTML = `<option value="">Ÿäÿ±ÿ¨Ÿâ ÿßÿÆÿ™Ÿäÿßÿ± ÿßŸÑÿπŸäÿßÿØÿ©</option>`;
  return;
}

    if (isLoadingTimes) return;
    isLoadingTimes = true;

    fetchBtn.disabled = true;
    clinicSel.disabled = true;
    monthSel.disabled = true;
    showLoader(true);

    try {
      const r = await fetch('/api/times', {
        method:'POST',
        headers:{'Content-Type':'application/json'},
        body: JSON.stringify({ clinic, month })
      });
      const data = await r.json();
      if (data.times && data.times.length) {
        timeSel.innerHTML = data.times.map(t => `<option value="${t.value}">${t.label}</option>`).join('');
        timeSel.disabled = false;
        bookNowBtn.disabled = false;
      } else {
        timeSel.innerHTML = `<option value="">ŸÑÿß ÿ™Ÿàÿ¨ÿØ ÿ£ŸàŸÇÿßÿ™ ŸÖÿ™ÿßÿ≠ÿ©</option>`;
        bkMsg.textContent = 'ŸÑÿß ÿ™Ÿàÿ¨ÿØ ÿ£ŸàŸÇÿßÿ™ ŸÖÿ™ÿßÿ≠ÿ© ÿ≠ÿßŸÑŸäÿßŸã.';
      }
    } catch {
      timeSel.innerHTML = `<option value="">ÿ™ÿπÿ∞ÿ± ÿ¨ŸÑÿ® ÿßŸÑÿ£ŸàŸÇÿßÿ™</option>`;
      bkMsg.textContent = 'ÿ™ÿπÿ∞ÿ± ÿ¨ŸÑÿ® ÿßŸÑÿ£ŸàŸÇÿßÿ™. ÿ≠ÿßŸàŸÑ ŸÑÿßÿ≠ŸÇÿßŸã.';
    } finally {
      isLoadingTimes = false;
      fetchBtn.disabled = false;
      clinicSel.disabled = false;
      monthSel.disabled = false;
      showLoader(false);
    }
  });

  // ÿßŸÑÿ≠ÿ¨ÿ≤ ÿßŸÑŸÖÿ®ÿßÿ¥ÿ± ÿßŸÑÿ¢ŸÜ
  bookNowBtn.addEventListener('click', async () => {
    const clinic = clinicSel.value;
    const month  = monthSel.value;
    const time   = timeSel.value;
   const identityVal = identity.value.trim();
const phone       = mobile.value.trim();

    const note   = (noteInput.value || '').trim();

   if (!clinic || !time || !identityVal || !phone) {
  bkMsg.textContent = 'ÿßŸÑÿ±ÿ¨ÿßÿ° ÿßÿÆÿ™Ÿäÿßÿ± ÿßŸÑÿπŸäÿßÿØÿ© ŸàÿßŸÑŸàŸÇÿ™ Ÿàÿ™ÿ≥ÿ¨ŸäŸÑ ÿßŸÑÿØÿÆŸàŸÑ.';
  return;
}


    snapshotPendingForSuccess();

    bookNowBtn.disabled = true;
    fetchBtn.disabled = true;
    clinicSel.disabled = true;
    monthSel.disabled = true;
    timeSel.disabled = false;

    showLoader(true);
    bkMsg.textContent = 'ÿ¨ÿßÿ±Ÿä ÿ™ÿ£ŸÉŸäÿØ ÿßŸÑÿ≠ÿ¨ÿ≤...';

    try {
      const payload = { identity: identityVal, phone, clinic, month, time, note, key: Date.now().toString() };
      const res = await fetch('/api/book', {
        method: 'POST',
        headers: {'Content-Type':'application/json'},
        body: JSON.stringify(payload)
      });
      const data = await res.json();
      const msg  = (data && data.msg) ? String(data.msg) : '';

      localStorage.setItem('booking_result_msg', msg);
      window.location.href = 'success.html';
    } catch (e) {
      bkMsg.textContent = 'ÿ™ÿπÿ∞ÿ± ÿßŸÑÿßÿ™ÿµÿßŸÑ ÿ®ÿßŸÑÿÆÿßÿØŸÖ. ÿ≠ÿßŸàŸÑ ŸÑÿßÿ≠ŸÇÿßŸã.';
      bookNowBtn.disabled = false;
      fetchBtn.disabled = false;
      clinicSel.disabled = false;
      monthSel.disabled = false;
      timeSel.disabled = false;
    } finally {
      showLoader(false);
    }
  });

  // ===== ÿ™ÿ®ÿØŸäŸÑ ÿßŸÑÿπÿ±ÿ∂ ÿ®ŸäŸÜ ÿßŸÑÿ≠ÿ¨ÿ≤ Ÿàÿ≥ÿßÿπÿßÿ™ ÿßŸÑÿπŸÖŸÑ =====
  const bookingSection = document.getElementById('bookingSection');
  const hoursSection = document.getElementById('hoursSection');
  const toggleHoursBtn = document.getElementById('toggleHours');
  const toggleBookingBtn = document.getElementById('toggleBooking');

  function showHours(){
    bookingSection.style.display = 'none';
    hoursSection.style.display = '';
    window.scrollTo({top:0, behavior:'smooth'});
  }
  function showBooking(){
    hoursSection.style.display = 'none';
    bookingSection.style.display = '';
    window.scrollTo({top:0, behavior:'smooth'});
  }

  toggleHoursBtn.addEventListener('click', showHours);
  toggleBookingBtn.addEventListener('click', showBooking);

// ===============================
// LOGOUT HANDLER
// ===============================
document.getElementById('logoutBtn')?.addEventListener('click', () => {

  // 1Ô∏è‚É£ ŸÖÿ≥ÿ≠ ÿ¨ŸÑÿ≥ÿ© ÿßŸÑŸàÿßÿ¨Ÿáÿ© ŸÅŸÇÿ∑
  localStorage.removeItem('auth_identity');
  localStorage.removeItem('auth_phone');
  localStorage.removeItem('auth_fileId');

  // 2Ô∏è‚É£ ÿ•ÿπÿßÿØÿ© ÿßŸÑŸàÿßÿ¨Ÿáÿ© ŸÑÿ™ÿ≥ÿ¨ŸäŸÑ ÿßŸÑÿØÿÆŸàŸÑ
  document.getElementById('bookingSection').style.display = 'none';
  document.getElementById('loginSection').style.display = '';

  // 3Ô∏è‚É£ ÿ™ŸÜÿ∏ŸäŸÅ ÿßŸÑÿ≠ŸÇŸàŸÑ
  document.getElementById('identity').value = '';
  document.getElementById('mobile').value   = '';
  

  // 4Ô∏è‚É£ ÿ≥ŸÉÿ±ŸàŸÑ ŸÑŸÑÿ£ÿπŸÑŸâ
  window.scrollTo({ top: 0, behavior: 'smooth' });
});


</script>

