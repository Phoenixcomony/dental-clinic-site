// ================= CLINICS SEED (RUN ONCE) =================
function seedClinicsOnce() {
  if (fs.existsSync(CLINICS_FILE)) {
    console.log('[CLINICS] clinics.json already exists ‚Äî skip seed');
    return;
  }
saveClinicsToRedis(readClinics()).then(syncClinicsToRuntime);

  console.log('[CLINICS] seeding clinics from defaults‚Ä¶');

  const seed = CLINICS_LIST.map(name => {
    const isEvening = name.includes('ÿßŸÑŸÅÿ™ÿ±ÿ© ÿßŸÑÿ´ÿßŸÜŸäÿ©');
    return {
      id: 'clinic_' + Date.now() + '_' + Math.random().toString(16).slice(2),
      label: name.split('**')[0],
      value: name,
      from: isEvening ? '16:00' : '09:00',
      to:   isEvening ? '22:00' : '11:30'
    };
  });

  fs.writeFileSync(
    CLINICS_FILE,
    JSON.stringify(seed, null, 2),
    'utf8'
  );

  console.log('[CLINICS] seed completed:', seed.length, 'clinics');
}


app.listen(PORT, '0.0.0.0', () => {
  console.log(`Server running on http://0.0.0.0:${PORT} (watch=${WATCH})`);
});

// ===== Warmup Prefetch (Railway-safe) =====
// ===== Continuous PrefETCH Loop =====
async function prefetchLoop() {
  try {
    await prefetchAllClinicsTimes();
    console.log('[PREFETCH] cycle completed');
  } catch (e) {
    console.error('[PREFETCH] cycle error', e?.message);
  } finally {
    // ‚è±Ô∏è ÿ®ÿπÿØ ŸÖÿß ŸäÿÆŸÑÿµÿå Ÿäÿ±ÿ¨ÿπ ŸäÿπŸäÿØ ÿßŸÑÿ¨ŸÑÿ®
    setTimeout(prefetchLoop, 60 * 1000); // ŸÉŸÑ ÿØŸÇŸäŸÇÿ©
  }
}

